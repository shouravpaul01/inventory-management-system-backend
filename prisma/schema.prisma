generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  email       String     @unique
  phone       String     @unique
  photo       String?
  role        UserRole
  status      UserStatus @default(ACTIVE)
  password    String
  otp         String?
  otpExpireAt DateTime?
  isDeleted   Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("users")
}

model Post {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
}

enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  BLOCKED
}
